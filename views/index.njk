                        return;
                    }
                    positionTooltip(event);
                },
                hide() {
                    hideTooltip();
                }
            };

            window.floatingTooltipController = controller;

            floatingTooltip.addEventListener('mouseleave', hideTooltip);
            window.addEventListener('scroll', hideTooltip, { passive: true });

