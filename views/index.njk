                .filter(entry => Number.isFinite(entry.threshold) && entry.name)
                .sort((a, b) => a.threshold - b.threshold);

            if (!sorted.length) {
                return fallback;
            }

            let label = fallback;
            for (const entry of sorted) {
                if (value >= entry.threshold) {
                    label = entry.name;
                }
